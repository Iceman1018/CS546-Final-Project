<form action="edit" method="POST" class="edit-review-form">
    <label for="review">Review</label>
    <input id="review" type="text" placeholder="Type your review" name="reviewInput" value="{{review}}">
    <label for="rating">Rating</label>
    <input id="rating" type="number" placeholder="Enter your rating(1-10)"name="ratingInput" value="{{rating}}">
    {{!-- <button type="submit">Edit review</button> --}}
    <input type="hidden" name="_method" value="PUT" >
    <input type="submit" value="Edit">

</form>
{{#if isAdded}}<p>{{status}}</p>{{/if}}
{{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
{{/if}}