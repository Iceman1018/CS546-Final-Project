<div>
    <form id="commentForm" class={{gameid}}>
        <input type="file" class="select-img" id="select-img" name="pic" multiple="multiple">
        <textarea name="text" rows="4" cols="50"></textarea>
        <button type="submit">submit</button>
    </form>
    <div class="pics" id="pics"></div>
</div>
<div>
    <ul id="commentslist">
        {{#each commentlist}}
            <li class="listnode">
                {{>commentT comment=this}}
            </li>
        {{/each}}
    </ul>
    <button id="loadingbtn" class={{gameid}}>loading more</button>
    <p id="lastcomment">No more comments</p>
</div>
