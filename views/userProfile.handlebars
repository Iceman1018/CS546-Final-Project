<div class="profile">
    <img src="/public/userimages/{{avatar}}" class="profile" alt="Avatar" width="100" height="100" />
    <h2>Username</h2>
    <h3 class='profile-text'>{{username}}</h3>
    <h2>Age</h2>
    <h3 class='profile-text'>{{age}}</h3>
    <h2>Email</h2>
    <h3 class='profile-text'>{{email}}</h3>
</div>
{{#if isLoggedInUser}}
<h3><a href="/user/{{id}}/edit">Edit profile</h3>
<h3><a href="/user/{{id}}/edit/avatar">Change avatar</a></h3>
<h3><a href="/user/{{id}}/delete" style="color: red">Delete User</a></h3>
{{/if}}
