<div class="profile">
    <img src="/public/userimages/{{avatar}}" class="profile" id="userprofile" alt="Avatar" width="100" height="100">
    <h2>Username</h2>
    <h3 class='profile-text'>{{username}}</h3>
    <h2>Age</h2>
    <h3 class='profile-text'>{{age}}</h3>
    <h2>Email</h2>
    <h3 class='profile-text'>{{email}}</h3>
</div>
{{#if isLoggedInUser}}
<h3><a href="/user/{{id}}/edit">Edit profile</a></h3>
<h3><a href="/user/{{id}}/edit/avatar">Change avatar</a></h3>
<form action="{{id}}" method="POST" class="delete-button">
                <input type="hidden" name="_method" value="DELETE" >
                <input type="submit" value="Delete">
            </form>
{{!-- change here ^ --}}
{{/if}}
